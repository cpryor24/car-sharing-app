<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <title>Car Sharing</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark nav-color">
      <div class="text-white text-left logo">Turbo</div>
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" data-toggle="modal" data-target="#login">Log in</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" data-toggle="modal" data-target="#signUp">Sign up</a>
          </li>
        </ul>
      </div>
    </nav>


    <!-- Nav Login Modal -->
    <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="signIn" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-title text-center" id="signIn">Welcome back</h2>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="container">
              <div class="row">
                <div class="col-sm-12 col-md-10 offset-md-1">
                  <form action="/login" method="post">
                    <input type="email" class="form-control" name="email" placeholder="Email"><br>
                    <input type="password" class="form-control" name="password" placeholder="Password"><br>
                    <div class="text-center">
                      <input class="btn btn-primary" type="submit" value="Log in">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Nav Sign-up Modal -->
    <div class="modal fade" id="signUp" tabindex="-1" role="dialog" aria-labelledby="register" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-title text-center" id="register">Let's get started</h2>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="container">
              <div class="row">
                <div class="col-sm-12 col-md-10 offset-md-1">
                  <form action="/sign-up" method="post">
                    <input type="text" class="form-control" name="first_name" placeholder="First Name"><br>
                    <input type="text" class="form-control" name="last_name" placeholder="Last Name"><br>
                    <input type="email" class="form-control" name="email" placeholder="Email"><br>
                    <input type="password" class="form-control" name="password" placeholder="Password"><br>
                    <div class="text-center">
                      <input class="btn btn-primary" type="submit" value="Submit">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid rental rent-hero">
      <div class="row">
        <div class="col-sm-12">
          <div><img src="/assets/img/<%= rental.url_img %>" alt=""></div>
        </div>
      </div>
    </div>

    <br>

    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-md-12 offset-md-1">
          <div class="container">
            <div class="row">
              <div class="col-sm-3 col-md-2">
                <div class="uppercase">the car</div>
              </div>
              <div class="col-sm-4 col-md-5 offset-md-1">
                <div><%= rental.first_name%>'s</div>
                <div class="uppercase rent-title"><%= rental.make%> <%= rental.model%> <%= rental.year%></div>
                <div><%= rental.trips%> Trips</div>
                <div class="container">
                  <div class="row">
                    <div class="col-sm-6 no-padding">
                      <div><%= rental.mpg%> MPG</div>
                      <div><%= rental.doors%> doors</div>
                    </div>
                    <div class="col-sm-6 no-padding">
                      <div><%= rental.gas%></div>
                      <div><%= rental.seats%> seats</div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-sm-4 col-md-3 rent">
                <div class="text-center"><span class="main-symbol align-top">$</span><span id="price"><%= rental.price%></span> per day</div>
                <form action="/booking/<%=rental.id%>" method="get" >
                  <label for="from">START</label>
                  <input id="fromDate" type="date" class="form-control" name="from" placeholder="From"><br>
                  <label for="to">END</label>
                  <input id="toDate" type="date" class="form-control" name="to" placeholder="To"><br>
                  <!-- <div class="alert alert-danger" role="alert">
                    This car isn’t available for the selected dates.
                  </div> -->
                  <div class="text-center">
                    <input class="btn btn-primary uppercase" id="checkout" type="submit" value="Go to checkout">
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-sm-3 col-md-2">
                <div class="uppercase">description</div>
              </div>
              <div class="col-sm-9 col-md-5 offset-md-1">
                <div><%= rental.description%></div>
              </div>
              <div class="col-sm-4 col-md-3 ">
                <p class="text-center">You won't be charged yet.</p>
                <div class="container">
                  <div class="row">
                    <b class="col-sm-12 top-border">DISTANCE INCLUDED</b>
                    <div class="col-sm-6 bottom-border">
                      <div>Day</div>
                    </div>
                    <div class="col-sm-6 bottom-border">
                      <div class="text-right">150 mi</div>
                    </div>
                    <div class="col-sm-12 top-border bottom-border">
                      <div>INSURANCE PROVIDED</div>
                      <div class="title-color">Liberty Mutual</div>
                    </div>
                    <div class="col-sm-6 top-border rent-font-size">
                      <div>OWNED BY</div>
                      <div><%= rental.first_name%> <%= rental.last_name%></div>
                    </div>
                    <div class="col-sm-6 top-border">
                      <div class="text-right "><img class="image img-rent" src="/assets/img/<%= rental.img%>" alt=""></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-sm-3 col-md-2">
                <div class="uppercase">Guidelines</div>
              </div>
              <div class="col-sm-9 col-md-5 offset-md-1">
                <div><%= rental.instructions%></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

